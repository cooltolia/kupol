include ../star-rating/star-rating

mixin testimonials-card(mod = '', more = true, hasImage = false)
    +b.testimonials-card(class=mod)
        +e.content
            +e.header
                +e.author
                    +e.name Высоцкий В.М.
                    +e.post Генеральный директор ООО АЛЕВ Строй»
                +e.rating
                    +star-rating(false)
            +e.text
                block
            if (more)
                +e.actions
                    +e.BUTTON.more.js-testimonial-full(type='button' data-id='1') Читать весь отзыв
                    +e.A.scan(href="https://i.imgur.com/fsyrScY.jpg" data-fslightbox="scan1")
                        span.icon
                            include ../../../src/assets/images/svg/document.svg
                        | Смотреть скан отзыва
        if (hasImage)
            +e.A.image(data-fslightbox="testimonial" href="https://i.imgur.com/fsyrScY.jpg")
                img(src="https://i.imgur.com/fsyrScY.jpg", alt="")