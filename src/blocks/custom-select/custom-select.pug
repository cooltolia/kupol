mixin custom-select({name, options = [], placeholder = false, label = false, defaultValue = '', required = false})
    +b.custom-select&attributes(attributes)
        if (label)
            +e.LABEL.label !{label}
                if (required)
                    span *
        if (name)
            +e.INPUT.value(type='hidden' name=name value=defaultValue required=required)
        +e.BUTTON.selected(type='button' tabindex='0')= placeholder || options[0]
        +e.dropdown(aria-expanded='false')
            +e.UL.options
                if (options && options.length > 0)
                    each option, i in options
                        +e.LI.option(tabindex='0' data-product=i)= option
                else
                    block
